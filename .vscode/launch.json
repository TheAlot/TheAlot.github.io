  "version": "0.2.0",
  "configurations": [
    {
      "command": "yarn dev",
      "name": "Server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "firefox",
      "request": "launch",
      "name": "Browser",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/app"
    }
  ],
  "compounds": [
    {
      "name": "Start server and browser",
      "configurations": [
        "Server",
        "Browser"
      ]
    }
  ]
}